                                             ; release code
000272   0ef0     movlw	0xf0                 movlw         0xF0
000274   1980     xorwf	0x80, 0, 0x1         xorwf         translation_buffer, w
000276   e010     bz	0x298                   bz            translate_set_release
                                             ; special key code
000278   0ee0     movlw	0xe0                 movlw         0xE0
