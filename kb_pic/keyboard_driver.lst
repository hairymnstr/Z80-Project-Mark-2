0005ec   a18f     btfss	0x8f, 0, 0x1         btfss         parity, parity_flag
0005ee   9293     bcf	0x93, 0x1, 0           bcf           TRISB,1
0005f0   b18f     btfsc	0x8f, 0, 0x1         btfsc         parity, parity_flag
0005f2   8293     bsf	0x93, 0x1, 0           bsf           TRISB,1
