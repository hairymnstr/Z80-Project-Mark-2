000344   5180     movf	0x80, 0, 0x1          movf          translation_buffer, w
000346   a98a     btfss	0x8a, 0x4, 0x1       btfss         flags, release_flag
000348   ec58     call	0x6b0, 0              call          hostbus_push
00034a   f003
                                           
                                           translate_ascii_nosend
