00065c   0789     decf	0x89, 0x1, 0x1        decf          ps2_send_count, f
                                           
00065e   918b     bcf	0x8b, 0, 0x1           bcf           txflags, ack_flag
000660   938b     bcf	0x8b, 0x1, 0x1         bcf           txflags, resend_flag    ; make sure they're both clear
                                           
