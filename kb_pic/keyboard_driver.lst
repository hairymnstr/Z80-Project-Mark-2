0005c0   4384     rrncf	0x84, 0x1, 0x1       rrncf         txreg,f         ; rotate the register to put the next bit at 0
0005c2   ef0b     goto	0x616                 goto          edge_event_exit ; all done
0005c4   f003
                                           
