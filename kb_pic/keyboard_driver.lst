000570   9293     bcf	0x93, 0x1, 0           bcf           TRISB, 1
000572   0e14     movlw	0x14                 movlw         d'20'
000574   6f8c     movwf	0x8c, 0x1            movwf         count
                                           timeout_wait_loop
000576   2f8c     decfsz	0x8c, 0x1, 0x1      decfsz        count,f
