000616   2b83     incf	0x83, 0x1, 0x1        incf          bit_count,f
000618   6ad6     clrf	0xd6, 0               clrf          TMR0L                   ; clear the timeout counter
00061a   92f2     bcf	0xf2, 0x1, 0           bcf           INTCON, INT0IF
