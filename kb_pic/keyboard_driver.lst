                                             ; re-enable the timer overflow interrupt
000582   94f2     bcf	0xf2, 0x2, 0           bcf           INTCON, TMR0IF
000584   9ed5     bcf	0xd5, 0x7, 0           bcf           T0CON, TMR0ON
